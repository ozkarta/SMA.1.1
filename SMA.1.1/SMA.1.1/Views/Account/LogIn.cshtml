
@{
    ViewBag.Title = "LogIn";
}

<h2>Log In</h2>


<style>
    body{
    background-color: #525252;
}
.centered-form{
	margin-top: 60px;
}

.centered-form .panel{
	background: rgba(255, 255, 255, 0.8);
	box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
}
</style>


<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Log In  <small>  Ozzle</small></h3>
			 	</div>
			 			<div class="panel-body">
			    		<form role="form" method="post" action="../Home/LogInValidation">
                                 <div class="container">
 
                                    <!-------->
                                    <div id="content">
                                        <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
                                            <li class="active"><a href="#local" data-toggle="tab">Sign In the Web Site</a></li>
                                            <li><a href="#social" data-toggle="tab">Social Profiles</a></li>
        
                                        </ul>
                                        <hr />
                                        <div id="my-tab-content" class="tab-content">
                                            <div class="tab-pane active" id="local">
                                                <div class="form-group">
                                                     <input type="text" name="user_name" id="user_name" class="form-control input-sm" placeholder="User Name">
                                                </div>
                                                <div class="form-group">
                                                      <input type="text" name="password" id="password" class="form-control input-sm" placeholder="Password">
                                                </div>
                                                       <input type="submit" value="Log In" class="btn btn-info btn-block">
                                            </div>
                                            <div class="tab-pane" id="social">
                                                <input type="submit" value="Facebook"/>
                                            </div>
        
                                        </div>
                                    </div>
 
 
                                    <script type="text/javascript">
                                        jQuery(document).ready(function ($) {
                                            $('#tabs').tab();
                                        });
                                    </script>    
                                    </div>
                            
			    		</form>
			    	</div>
	    		</div>
    		</div>
    	</div>
